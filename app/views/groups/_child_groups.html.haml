- @sub_groups.each do |label, groups|
  = section_table(label, groups) do |item|
    %td
      = link_to(item.to_s, group_path(item.id))

    %td.right
      = Person::ListFilter.new(item, Person.find_by_email(Settings.root_email), 'deep', Role.visible_types.collect(&:id)).all_count
